<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    controllerName="flovogt.website.controller.Header"
>
    <Page
        id="homePage"
        showHeader="false"
    >
        <HBox
            renderType="Bare"
            justifyContent="Center"
            alignContent="Center"
            height="100%"
        >
            <VBox
                renderType="Bare"
                justifyContent="Center"
                alignItems="Center"
                height="100%"
            >
                <Avatar
                    id="avatar"
                    src="img/flovogt.jpg"
                    displaySize="XL"
                    showBorder="true"
                    press="onPress"
                    class="speakerAvatar sapUiMediumMarginBottom"
                />
                <SegmentedButton
                    id="segmentedButton"
                    selectedKey="home"
                    width="300px"
                    selectionChange="onMenuItemChange"
                >
                    <items>
                        <SegmentedButtonItem
                            text="{i18n>homeText}"
                            key="home"
                        />
                        <SegmentedButtonItem
                            text="{i18n>aboutText}"
                            key="about"
                        />
                        <SegmentedButtonItem
                            text="{i18n>projectsText}"
                            key="projects"
                        />
                    </items>
                </SegmentedButton>
                <VBox
                    id="topics"
                    renderType="Bare"
                    width="100%"
                />
            </VBox>
        </HBox>
    </Page>
</mvc:View>
