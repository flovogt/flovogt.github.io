<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    controllerName="flovogt.website.controller.Header"
>
    <Page
        id="homePage"
        showHeader="false"
    >
        <VBox
            renderType="Bare"
            justifyContent="Start"
            alignContent="Center"
            alignItems="Center"
            height="100%"
        >
            <VBox
                renderType="Bare"
                justifyContent="Center"
                alignItems="Center"
                height="400px"
            >
                <Avatar
                    id="avatar"
                    src="img/flovogt.jpg"
                    displaySize="XL"
                    showBorder="true"
                    press="onPress"
                    class="speakerAvatar sapUiMediumMarginTop sapUiMediumMarginBottom"
                />
                <SegmentedButton
                    id="segmentedButton"
                    selectedKey="home"
                    width="300px"
                    selectionChange="onMenuItemChange"
                >
                    <items>
                        <SegmentedButtonItem
                            text="{i18n>homeViewTitle}"
                            key="home"
                        />
                        <SegmentedButtonItem
                            text="{i18n>aboutViewTitle}"
                            key="about"
                        />
                        <SegmentedButtonItem
                            text="{i18n>projectsViewTitle}"
                            key="projects"
                        />
                    </items>
                </SegmentedButton>
            </VBox>
            <VBox
                id="topics"
                renderType="Bare"
                width="300px"
                class="sapUiTinyMarginTop"
            />
        </VBox>
    </Page>
</mvc:View>
